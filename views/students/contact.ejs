<% layout('layouts/boilerplate')%>

<div class="container">
    <h1>Contact Your Mentor</h1>
    <form method="POST" action="/">
        <div class="mb-3">
            <input type="text" class="form-control" name="name" placeholder="Enter Name">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" name="semail" placeholder="Enter Your email">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" name="registration" placeholder="Enter Registration Number">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" name="branch" placeholder="Enter Branch">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" name="sem" placeholder="Enter Semester">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" name="phone" placeholder="Enter Phone Number">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" name="mname" placeholder="Enter Mentor's Name">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" name="memail" placeholder="Enter Mentor's email">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" name="subject" placeholder="Enter Subject">
        </div>
        <div class="mb-3">
            <textarea name="msg" id="" cols="10" rows="5" class="form-control" placeholder="Enter Message"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
    </form>
</div>